<!DOCTYPE html>
<html>
<head>
  <title>Learnguru</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag :cocoon %>
  <%= javascript_include_tag "bigSlide.min.js", "application" %>
  <%= csrf_meta_tags %>
<!--   <script src="https://www.google.com/jsapi"></script>
  <script src="https://www.youtube.com/iframe_api"></script> -->

</head>

<body>
<div class="col-md-3">
  <nav id="menu" class="navbar container-fluid " role="navigation">
            <div>
            <% if user_signed_in? %> 
           
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-default" %>
              <% else %>
              <%= link_to "Sign up", new_user_registration_path, class: "btn btn-info" %> 

              <%= link_to "Login", new_user_session_path, class: "btn btn-default" %>
            <% end %>
            </div>

      <ul class="nav nav-pills nav-stacked"> 
          <li><a href="#">Home</a></li>
          <li><a href="#">Learnlist</a></li>
          <li><a href="#">Lesson</a></li>
      </ul>
      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
  </nav>

</div>
  

<div class="col-md-9">
<%= yield %>

      <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= value %>
      </div>
      <% end %>

</div>

<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/handlebars.js/2.0.0/handlebars.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>






</body>
</html>
