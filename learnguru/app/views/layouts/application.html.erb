<!DOCTYPE html>
<html>
<head>
  <title>Learnguru</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>

  <%= csrf_meta_tags %>


</head>

<body>
<div class = "container-fluid">
<div class="col-md-3 menu-left">
<div id="separator-space"></div>
  <nav id="menu" class="navbar container-fluid " role="navigation">
            <div>
            <% if user_signed_in? %> 
              
              <%= image_tag current_user.gravatar_url %>
              
              <%= link_to "Logout", destroy_user_session_path, method: :delete %>
              
              <% else %>
              <%= link_to "Sign up", new_user_registration_path, class: "btn btn-info" %> 
              <%= link_to "Login", new_user_session_path, class: "btn btn-default" %>
            <% end %>
            </div>

      <ul class="nav nav-pills nav-stacked"> 
          
          <li><%= link_to "Access courses", learnlists_path %></li>
          <li><%= link_to "Create course", new_learnlist_path %></li>
          <li><%= link_to "Check out lessons", lessons_path %></li>
          
      </ul>
      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>
  </nav>

</div>
  

<div class="col-md-9">
<%= yield %>

      <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= value %>
      </div>
      <% end %>

</div>

<script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/handlebars.js/2.0.0/handlebars.min.js"></script>






</div>
</body>
</html>
