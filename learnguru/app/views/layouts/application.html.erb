<!DOCTYPE html>
<html>
  <head>
    <title>Learn Guru</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>

  <!-- Navigation -->
<div class="container">
<nav class="navbar " role="navigation">
  <div class="container">
    <nav class="navbar " role="navigation">
      <div class="container">

        <div class="navbar-header ">
          <%= link_to "Learn Guru",root_path, class: "navbar-brand" %>
        </div>

        <div class="collapse navbar-collapse">
          <div id="log_in_area" class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <!-- Gravatar -->
              <%= image_tag current_user.gravatar_url, class: "img-circle gravatar" %>          
              <span class="gravatar-responsive" style="margin-right: 15px">
                Welcome <strong><%= current_user.username %></strong>
              </span>  
            <!-- /Gravatar -->
            <span>
              <%= link_to edit_user_registration_path, class: "btn btn-info" do %>
              <span class="glyphicon glyphicon-edit"></span> Edit profile
              <% end %> 

              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-default" %>
              <% else %>
              <%= link_to "Sign up", new_user_registration_path, class: "btn btn-info" %> 
              <%= link_to new_user_session_path, class: "btn btn-default" do %>
              <span class="glyphicon glyphicon-flash"></span> Login
              <% end %>  
            </span>

            <% end %>
          </div> 

          <ul class="nav navbar-nav navbar-left">
            <li><%= link_to 'Access Learnlists', learnlists_path  %></li>
            <li><%= link_to 'Create Learnlists', new_learnlist_path  %></li>
          </ul>
        </div>

      </div>
    </nav>
  
</div>
</nav>
</div>
    <!-- /Navigation -->

        <%= yield %>
  


    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/handlebars.js/2.0.0/handlebars.min.js"></script>
    <!-- Footer -->
    <footer class=" col-xs-12 col-md-12 col-lg-12">
      
     
    </footer>
    <!-- /Footer -->
  </body>
</html>
